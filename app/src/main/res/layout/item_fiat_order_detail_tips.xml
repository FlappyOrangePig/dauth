<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_section1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/bg_grayd9_r999"
        android:gravity="center"
        android:text="1"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:text="Open your AdvCash app"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/tv_section1"
        app:layout_constraintStart_toEndOf="@id/tv_section1"
        app:layout_constraintTop_toTopOf="@id/tv_section1" />

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_section2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/bg_grayd9_r999"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_section1"
        app:layout_constraintTop_toBottomOf="@id/tv_section1" />

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_title_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/tv_section2"
        app:layout_constraintStart_toEndOf="@id/tv_section2"
        app:layout_constraintTop_toTopOf="@id/tv_section2"
        tools:text="Enter the payment amount of " />

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_cost"
        app:layout_constraintStart_toEndOf="@id/tv_title_cost"
        app:layout_constraintTop_toTopOf="@id/tv_title_cost"
        tools:text="$1,906.86" />

    <LinearLayout
        android:id="@+id/ll_account_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        android:background="@color/gray_d9"
        android:orientation="vertical"
        android:paddingTop="7.5dp"
        android:paddingBottom="7.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_title_cost"
        app:layout_constraintTop_toBottomOf="@id/tv_title_cost">

        <LinearLayout
            android:id="@+id/ll_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="7.5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.infras.dauth.widget.IFTextView
                android:id="@+id/tv_account_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grayd9_r999"
                android:gravity="center"
                android:text="Account Name"
                android:textColor="@color/gray_60"
                android:textSize="11sp" />

            <com.infras.dauth.widget.IFTextView
                android:id="@+id/tv_account_name_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:background="@drawable/bg_grayd9_r999"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="11sp"
                tools:text="John Wick" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/svg_ic_copy"
                app:layout_constraintBottom_toBottomOf="@id/tv_section1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_section1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="7.5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.infras.dauth.widget.IFTextView
                android:id="@+id/tv_account_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grayd9_r999"
                android:gravity="center"
                android:text="Account Number"
                android:textColor="@color/gray_60"
                android:textSize="11sp" />

            <com.infras.dauth.widget.IFTextView
                android:id="@+id/tv_account_number_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:background="@drawable/bg_grayd9_r999"
                android:gravity="end"
                android:textColor="@color/black"
                android:textSize="11sp"
                tools:text="456638747627" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/svg_ic_copy"
                app:layout_constraintBottom_toBottomOf="@id/tv_section1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_section1" />

        </LinearLayout>

    </LinearLayout>

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_section3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg_grayd9_r999"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tv_section1"
        app:layout_constraintTop_toBottomOf="@id/ll_account_info" />

    <com.infras.dauth.widget.IFTextView
        android:id="@+id/tv_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:text="Mark the order as paid (Screenshot proof)"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/tv_section3"
        app:layout_constraintStart_toEndOf="@id/tv_section3"
        app:layout_constraintTop_toTopOf="@id/tv_section3" />

    <TextView
        android:id="@+id/tv_add_proof"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_grayd9_r5"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_title3"
        app:layout_constraintTop_toBottomOf="@id/tv_title3" />

    <ImageView
        android:id="@+id/iv_proof"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/tv_add_proof"
        app:layout_constraintEnd_toEndOf="@id/tv_add_proof"
        app:layout_constraintStart_toStartOf="@id/tv_add_proof"
        app:layout_constraintTop_toTopOf="@id/tv_add_proof" />


</androidx.constraintlayout.widget.ConstraintLayout>