<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyberflow.dauthsdk.LoginActivity">

    <TextView
        android:id="@+id/tv_dauth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAuth"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/twitter_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/iv_google"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_google"
        app:layout_constraintStart_toStartOf="@id/edt_account"
        app:layout_constraintBottom_toTopOf="@id/edt_account"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"/>

    <ImageView
        android:id="@+id/iv_twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintStart_toEndOf="@id/iv_google"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/edt_account"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth"
        android:layout_marginBottom="5dp"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:visibility="gone"
        android:id="@+id/btn_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:src="@drawable/ic_facebook"
        app:layout_constraintStart_toEndOf="@id/iv_twitter"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/edt_account"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/edt_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/account_btn_shape"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Enter email address"
        app:layout_constraintTop_toBottomOf="@id/iv_google"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_switch_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        android:text="密码登录"
        app:layout_constraintEnd_toEndOf="@id/edt_account"
        app:layout_constraintTop_toTopOf="@id/edt_account"
        app:layout_constraintBottom_toBottomOf="@id/edt_account"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_wallet"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_wallet_connect"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_facebook"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginEnd="50dp"
        android:background="@drawable/account_btn_shape"
        app:layout_constraintTop_toBottomOf="@id/edt_account"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Send Code"
        app:layout_constraintEnd_toEndOf="@id/edt_password"
        app:layout_constraintTop_toTopOf="@id/edt_password"
        app:layout_constraintBottom_toBottomOf="@id/edt_password"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_query_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="根据邮箱查询用户"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/allow_btn_shape"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_dauth_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="提交"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/allow_btn_shape"
        app:layout_constraintTop_toBottomOf="@id/btn_query_account"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        app:layout_constraintTop_toBottomOf="@id/btn_dauth_login"
        app:layout_constraintStart_toStartOf="@id/btn_dauth_login"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        app:layout_constraintTop_toBottomOf="@id/btn_dauth_login"
        app:layout_constraintEnd_toEndOf="@id/btn_dauth_login"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/blue"/>

