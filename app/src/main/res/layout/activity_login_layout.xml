<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyberflow.dauthsdk.LoginActivity">

    <TextView
        android:id="@+id/tv_dauth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="DAuth"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_google"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_google"
        app:layout_constraintBottom_toTopOf="@id/edt_account"
        app:layout_constraintStart_toStartOf="@id/edt_account"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth" />

    <ImageView
        android:id="@+id/iv_twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_twitter"
        app:layout_constraintBottom_toTopOf="@id/edt_account"
        app:layout_constraintStart_toEndOf="@id/iv_google"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth" />

    <ImageView
        android:id="@+id/iv_facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_facebook"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/edt_account"
        app:layout_constraintStart_toEndOf="@id/iv_twitter"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth" />

    <EditText
        android:id="@+id/edt_account"
        style="@style/Theme.client.EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:hint="Enter email address"
        app:layout_constraintTop_toBottomOf="@id/iv_google" />

    <TextView
        android:id="@+id/tv_switch_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:text="密码登录"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edt_account"
        app:layout_constraintEnd_toEndOf="@id/edt_account"
        app:layout_constraintTop_toTopOf="@id/edt_account" />

    <ImageView
        android:id="@+id/iv_wallet"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_wallet_connect"
        app:layout_constraintStart_toEndOf="@id/iv_facebook"
        app:layout_constraintTop_toBottomOf="@id/tv_dauth" />

    <EditText
        android:id="@+id/edt_password"
        style="@style/Theme.client.EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/edt_account" />

    <TextView
        android:id="@+id/tv_send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:text="Send Code"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/edt_password"
        app:layout_constraintEnd_toEndOf="@id/edt_password"
        app:layout_constraintTop_toTopOf="@id/edt_password" />


    <Button
        android:id="@+id/btn_dauth_login"
        style="@style/Theme.client.BlueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="提交"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_password" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="忘记密码"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="@id/btn_mobile_login"
        app:layout_constraintTop_toBottomOf="@id/btn_mobile_login" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="注册"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/btn_mobile_login"
        app:layout_constraintTop_toBottomOf="@id/btn_mobile_login" />

    <Button
        android:id="@+id/btn_mobile_login"
        style="@style/Theme.client.BlueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="手机号登录"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/btn_dauth_login"
        app:layout_constraintStart_toStartOf="@id/btn_dauth_login"
        app:layout_constraintTop_toBottomOf="@id/btn_dauth_login" />

</androidx.constraintlayout.widget.ConstraintLayout>