<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_gas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/allow_btn_shape"
        android:text="预估Gas费"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_query_balance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_gas"
        android:layout_marginTop="50dp"
        android:background="@drawable/allow_btn_shape"
        android:text="查询钱包余额"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_send_transaction"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_query_balance"
        android:layout_marginTop="50dp"
        android:background="@drawable/allow_btn_shape"
        android:text="交易/转账"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_send_transaction"
        android:layout_marginTop="50dp"
        android:background="@drawable/allow_btn_shape"
        android:text="设置邮箱登录密码"
        android:textColor="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>